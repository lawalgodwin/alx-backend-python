pipeline {
    agent any

    stages {
        stage("Pull code from GitHub") {
            steps {
                git branch: 'main', credentialsId: 'GitHub_Cred', url: 'https://github.com/lawalgodwin/alx-backend-python.git'
            }
        }
        stage("install dependencies") {
            steps {
                sh 'python3 -m venv venv && cd venv && source bin/activate && ls -l'
                sh 'pip install -r requirements.txt'
            }
        }
        stage("Test") {
            steps {
                sh 'pytest'
            }
        }
    }
    
    post {
        always {
            echo 'pytest --cov'
        }
    }
}