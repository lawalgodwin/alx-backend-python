pipeline {
    agent any

    stages {
        stage("Pull code from GitHub") {
            steps {
                git branch: 'main',
                    credentialsId: 'GitHub_Cred',
                    url: 'https://github.com/lawalgodwin/alx-backend-python'
            }
        }
        stage("install dependencies") {
            steps {
                dir('messaging_app') {
                    sh '''
                        rm -rf venv
                        python3 -m venv venv
                        bash -c "source venv/bin/activate"
                        venv/bin/pip install -r requirements.txt
                    '''
                }
            }
        }
        // stage("Test") {
        //     steps {
        //         sh 'pytest'
        //     }
        // }
    }
    
    post {
        always {
            echo 'pytest --cov'
        }
    }
}