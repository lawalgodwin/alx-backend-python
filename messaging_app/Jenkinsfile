pipeline {
    agent any

    stages {
        stage("Pull code from GitHub") {
            steps {
                git branch: 'main',
                    credentialsId: 'GitHub_Cred',
                    url: 'https://github.com/lawalgodwin/alx-backend-python'
            }
        }
        stage("install dependencies") {
            steps {
                sh 'cd messaging_app && pip freeze'
                // sh 'cd messaging_app && ls -l && python3 -m pip install -r requirements.txt'
            }
        }
        // stage("Test") {
        //     steps {
        //         sh 'pytest'
        //     }
        // }
    }
    
    post {
        always {
            echo 'pytest --cov'
        }
    }
}